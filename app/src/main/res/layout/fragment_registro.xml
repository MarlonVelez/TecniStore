<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:layout_marginTop="0dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="393dp"
            android:layout_height="378dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/contenedorRegistro"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp">

        <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/txtCedulaPago"
                android:padding="15dp"
                android:layout_marginTop="20dp" android:layout_marginStart="40dp" android:hint="Cedula"
                android:textColor="@color/azul_brillante" android:textSize="15sp"
                android:textColorHint="@color/gris_hint"
                android:background="@drawable/brackgraund_txt_register"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="68dp" android:layout_marginTop="10dp">
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtNombrePago" android:minHeight="48dp"
                    android:layout_marginStart="27dp" android:layout_marginTop="18dp" android:padding="15dp"
                    android:hint="Nombre" android:textColor="@color/azul_claro" android:textSize="15sp"
                    android:textColorHint="@color/gris_hint"
                    android:background="@drawable/brackgraund_txt_register"/>
            <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginTop="16dp" android:layout_marginStart="8dp"/>
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtApellidoPago" android:minHeight="48dp" android:layout_marginTop="18dp"
                    android:layout_marginStart="10dp"
                    android:padding="15dp" android:hint="Apellido" android:textColor="@color/azul_claro"
                    android:textSize="15sp"
                    android:textColorHint="@color/gris_hint" android:background="@drawable/brackgraund_txt_register"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="68dp" android:layout_marginTop="10dp">
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtNameUsuarioR"
                    android:minHeight="48dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="10dp" android:padding="15dp"
                    android:hint="Usuario" android:textColor="@color/azul_claro"
                    android:textSize="15sp"
                    android:textColorHint="@color/gris_hint" android:background="@drawable/brackgraund_txt_register"
                    android:enabled="false"/>
            <View
                    android:id="@+id/divider2"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginTop="10dp" android:layout_marginStart="8dp"/>
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/txtContraseñaUsuarioR" android:minHeight="48dp" android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:padding="15dp" android:hint="Contraseña" android:textColor="@color/azul_claro"
                    android:textSize="15sp"
                    android:textColorHint="@color/gris_hint" android:background="@drawable/brackgraund_txt_register"
                    android:enabled="false"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="71dp">
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="date"
                    android:focusable="false"
                    android:clickable="true"
                    android:maxLines="1"
                    android:minHeight="48dp" android:layout_marginTop="10dp"
                    android:layout_marginStart="27dp"
                    android:padding="15dp" android:id="@+id/txtFechaNacPago" android:hint="Fecha de Nacimiento"
                    android:textColor="@color/azul_claro" android:textSize="13sp"
                    android:textColorHint="@color/gris_hint"
                    android:background="@drawable/brackgraund_txt_register"/>
            <View
                    android:id="@+id/divider4"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginStart="8dp" android:layout_marginTop="16dp"/>
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/txtDireccionPago" android:minHeight="48dp" android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:padding="15dp" android:hint="Direccion" android:textColor="@color/azul_claro"
                    android:textSize="15sp"
                    android:textColorHint="@color/gris_hint" android:background="@drawable/brackgraund_txt_register"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="79dp">
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/txtEmailPago" android:minHeight="48dp" android:layout_marginTop="10dp"
                    android:layout_marginStart="27dp"
                    android:padding="15dp" android:hint="Email" android:textColor="@color/azul_claro"
                    android:textSize="15sp"
                    android:textColorHint="@color/gris_hint" android:background="@drawable/brackgraund_txt_register"/>
            <View
                    android:id="@+id/divider8"
                    android:layout_width="1dp"
                    android:layout_height="50dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginStart="8dp" android:layout_marginTop="10dp"/>
            <EditText
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:inputType="phone"
                    android:ems="10"
                    android:id="@+id/txtTelefonoPago" android:minHeight="48dp" android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:padding="15dp" android:hint="Telefono/Celular" android:textColor="@color/azul_claro"
                    android:textSize="15sp"
                    android:textColorHint="@color/gris_hint" android:background="@drawable/brackgraund_txt_register"/>
        </LinearLayout>
    </LinearLayout>
    <View
            android:id="@+id/divider15"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout6" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contenedorRegistro"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="397dp"
            android:layout_height="170dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintTop_toBottomOf="@+id/contenedorRegistro" app:layout_constraintVertical_bias="0.098"
            android:id="@+id/linearLayout6">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="79dp">
            <TextView
                    android:text="Número de Tarjeta"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content" android:id="@+id/textView11" android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp" android:textColor="@color/azul_brillante"/>
            <EditText
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/txtNumTarjeta" android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp" android:minHeight="48dp"
                    android:background="@android:color/transparent" android:hint="0000 0000 0000 0000"
                    android:drawableRight="@drawable/icon_card_txt_pago" android:textColor="@color/azul_brillante"/>
        </LinearLayout>
        <View
                android:id="@+id/divider25"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
        />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="209dp"
                    android:layout_height="match_parent">
                <TextView
                        android:text="Fecha de Vencimiento"
                        android:layout_width="157dp"
                        android:layout_height="wrap_content" android:id="@+id/textView12"
                        android:layout_marginTop="5dp" android:layout_marginStart="10dp"
                        android:textColor="@color/azul_brillante"/>
                <View
                        android:id="@+id/divider6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"
                        android:layout_marginTop="3dp"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="208dp"
                        android:layout_height="match_parent">
                    <EditText
                            android:layout_width="81dp"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:ems="10"
                            android:id="@+id/txtMesVencimiento"
                            android:minHeight="48dp" android:layout_marginTop="10dp" android:layout_marginStart="10dp"
                            android:background="@android:color/transparent" android:hint="Mes"
                            android:textColor="@color/azul_brillante"/>
                    <View
                            android:id="@+id/divider3"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="?android:attr/listDivider"
                            android:layout_marginStart="2dp"/>
                    <EditText
                            android:layout_width="106dp"
                            android:layout_height="wrap_content"
                            android:inputType="date"
                            android:ems="10"
                            android:id="@+id/txtAñoVencimiento"
                            android:minHeight="48dp" android:layout_marginTop="10dp" android:layout_marginStart="5dp"
                            android:background="@android:color/transparent" android:hint="Año"
                            android:textColor="@color/azul_brillante"/>
                </LinearLayout>
            </LinearLayout>
            <View
                    android:id="@+id/divider5"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="?android:attr/listDivider"
            />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="150dp"
                    android:layout_height="match_parent">
                <TextView
                        android:text="CVV"
                        android:layout_width="139dp"
                        android:layout_height="wrap_content" android:id="@+id/textView14"
                        android:layout_marginTop="6dp" android:layout_marginStart="5dp"
                        android:textColor="@color/azul_brillante"/>
                <EditText
                        android:layout_width="142dp"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/txtCVV" android:layout_marginTop="9dp"
                        android:minHeight="48dp" android:layout_marginStart="5dp"
                        android:background="@android:color/transparent" android:hint="000"
                        android:textColor="@color/azul_brillante"/>
            </LinearLayout>
        </LinearLayout>
        <View
                android:id="@+id/divider7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
        />
    </LinearLayout>
    <View
            android:id="@+id/divider16"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/btnSiguientePago"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="-40dp"/>
    <Button
            android:text="Continuar"
            android:layout_width="163dp"
            android:layout_height="54dp" android:id="@+id/btnSiguientePago"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false" android:background="@drawable/background_button_comprar"
            android:textColor="@color/white" android:textSize="16sp" android:textStyle="bold"/>

</androidx.constraintlayout.widget.ConstraintLayout>