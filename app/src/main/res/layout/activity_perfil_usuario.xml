<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PerfilUsuario">

    <androidx.cardview.widget.CardView
            android:layout_width="359dp"
            android:layout_height="307dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" android:layout_marginTop="16dp"
            android:id="@+id/cardView6">
        <TextView
                android:text="Editar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/btnEditarPerfil"
                android:layout_marginStart="290dp" android:layout_marginTop="15dp"
                android:textColor="@color/azul_brillante" android:textStyle="bold" android:textSize="14sp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="275dp"
                    android:layout_height="wrap_content" android:layout_marginStart="35dp"
                    android:layout_marginTop="50dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:drawableStart="@drawable/user_icon_focused"
                        android:drawablePadding="12dp"
                        android:layout_width="275dp"
                        android:layout_height="wrap_content"
                        tools:ignore="TouchTargetSizeCheck"
                        android:id="@+id/txtNameUserProfile"
                        android:hint="Usuario"
                        android:textColorHint="@color/azul_brillante"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="275dp"
                    android:layout_height="wrap_content" android:layout_marginStart="35dp"
                    android:layout_marginTop="30dp" >

                <com.google.android.material.textfield.TextInputEditText
                        android:drawableStart="@drawable/lock_icon_focused"
                        android:drawablePadding="12dp"
                        android:layout_width="276dp"
                        android:layout_height="wrap_content"
                        tools:ignore="TouchTargetSizeCheck"
                        android:id="@+id/txtClaveUserProfile"
                        android:hint="ContraseÃ±a"
                        android:textColorHint="@color/azul_brillante"/>
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="300dp"
                    android:layout_marginTop="-255dp"/>
            <Button
                    android:text="Guardar"
                    android:layout_width="180dp"
                    android:layout_height="56dp" android:id="@+id/btnGuardarCambios"
                    android:background="@drawable/backgraund_button" android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="20sp" android:textAllCaps="false" android:layout_marginStart="90dp"
                    android:layout_marginTop="300dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
            android:layout_width="419dp"
            android:layout_height="55dp"
            android:orientation="vertical" android:id="@+id/linearLayout2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <include
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        />
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="414dp"
            android:layout_height="225dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/backgraound_signup"
            android:id="@+id/constraintLayout4"
            app:layout_constraintHorizontal_bias="0.25" app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


        <!---->
        <com.airbnb.lottie.LottieAnimationView
                android:layout_width="137dp"
                android:layout_height="196dp"
                android:src="@drawable/icon_user" android:id="@+id/img_userProfileBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"/>
        <com.airbnb.lottie.LottieAnimationView
                android:layout_width="144dp"
                android:layout_height="224dp"
                android:src="@drawable/icon_user" android:id="@+id/img_userProfileBackground2"
                app:layout_constraintStart_toEndOf="@+id/img_userProfileBackground"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1.0"/>


        <com.airbnb.lottie.LottieAnimationView
                android:layout_width="135dp"
                android:layout_height="183dp"
                android:src="@drawable/icon_user" android:id="@+id/img_userProfileBackground3"
                app:layout_constraintStart_toEndOf="@+id/img_userProfileBackground2"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.04"/>
        <TextView
                android:text="Invitado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/labelNombreUsuario"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgUsuarioMenu" android:layout_marginTop="12dp"
                android:textColor="@color/white" android:textStyle="bold" android:textSize="20sp"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgUsuarioMenu"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/user_photo_profile"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="40dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>