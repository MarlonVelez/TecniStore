<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="410dp"
            android:layout_height="565dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/linearLayout5"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.106">
        <TextView
                android:text="Carrito"
                android:layout_width="65dp"
                android:layout_height="24dp" android:id="@+id/textView28"
                android:layout_marginStart="10dp" android:textAlignment="center"
                android:textSize="16sp" android:textStyle="bold"
        />
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="404dp"
                android:layout_height="219dp" android:layout_marginStart="5dp" android:id="@+id/listaProductosCompra"
                android:layout_marginTop="10dp">
        </androidx.recyclerview.widget.RecyclerView>
        <View
                android:id="@+id/divider9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
        />
        <TextView
                android:text="TextView"
                android:layout_width="162dp"
                android:layout_height="31dp" android:id="@+id/txtTotalListaCompra" android:layout_marginStart="250dp"
                android:layout_marginTop="2dp"/>
        <View
                android:id="@+id/divider10"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
        />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="44dp">
            <TextView
                    android:text="Datos de Pago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView19" android:textAlignment="center"
                    android:textStyle="bold" android:textSize="24sp" android:layout_marginTop="5dp"
                    android:layout_marginStart="20dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="235dp" android:layout_marginTop="2dp">
            <View
                    android:id="@+id/divider12"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
            />
            <TextView
                    android:text="Nombre Cliente"
                    android:layout_width="124dp"
                    android:layout_height="wrap_content" android:id="@+id/textView31" android:layout_marginStart="8dp"
                    android:textSize="16sp" android:textStyle="bold"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="256dp"
                    android:layout_height="wrap_content" android:id="@+id/txtNombreClientePago"
                    android:layout_marginStart="8dp"
                    android:textSize="16sp" android:layout_marginTop="5dp"/>
            <View
                    android:id="@+id/divider11"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginTop="10dp"/>
            <TextView
                    android:text="Dirección Domicilio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView33" android:layout_marginStart="8dp"
                    android:textSize="16sp" android:textStyle="bold"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="255dp"
                    android:layout_height="wrap_content" android:id="@+id/txtDireccionClientePago"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"/>
            <View
                    android:id="@+id/divider13"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginTop="10dp"/>
            <TextView
                    android:text="Teléfono/Celular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView35" android:layout_marginStart="8dp"
                    android:textSize="16sp" android:textStyle="bold" android:layout_marginTop="2dp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content" android:id="@+id/txtTelefonoClientePago"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"/>
            <View
                    android:id="@+id/divider14"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginTop="10dp"/>
            <TextView
                    android:text="Numero de Tarjeta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView37" android:layout_marginStart="8dp"
                    android:textSize="16sp" android:textStyle="bold"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="262dp"
                    android:layout_height="wrap_content" android:id="@+id/txtNumTarjetaClientePago"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
            android:text="Cancelar"
            android:layout_width="151dp"
            android:layout_height="56dp" android:id="@+id/btnCancelarPago"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintVertical_bias="0.45" android:background="@drawable/background_button_cancelar"
            android:textStyle="bold" android:textAllCaps="false" android:textColor="@color/gris"/>
    <Button
            android:text="Confirmar"
            android:layout_width="151dp"
            android:layout_height="56dp" android:id="@+id/btnConfirmarPago"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/btnCancelarPago"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintVertical_bias="0.45" android:background="@drawable/background_button_comprar"
            android:textStyle="bold" android:textAllCaps="false" android:textColor="@color/white"/>
</androidx.constraintlayout.widget.ConstraintLayout>